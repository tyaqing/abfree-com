{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "typeRoots": [
      "./node_modules/@figma"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "styled-system": ["styled-system/*"]
    }
  },
  "include":  ["src", "styled-system"]
}