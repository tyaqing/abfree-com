---
import {cn} from "@/lib/utils";
import {buttonVariants} from "@/components/ui/button";
import {Icon} from "astro-icon/components";
import i18next, {t} from "i18next";
import packages from '../../../package.json'
import {localizePath} from "astro-i18next";
import ToolsBox from "@/components/web/ToolsBox";
---

<section class="space-y-6 py-12 sm:py-20 lg:py-20">
    <div class="flex container  max-w-7xl gap-4">
        <div class=" flex flex-col gap-5 flex-1">
            <a href={localizePath("/releases", i18next.language)}
               class={cn(
                 buttonVariants({variant: "outline", size: "sm", rounded: "full"}),
                 "px-4 max-w-min"
               )}
               target="_blank"
            >
                <span class="mr-3">🎉</span> {t("Index.最新版本")} {packages.version}
                &nbsp;
                <span class="text-gradient_indigo-purple">{t("Index.压缩速度提升 X500%")}</span>

            </a>

            <h1 class="text-balance font-heading text-4xl sm:text-5xl md:text-6xl lg:text-[66px]"
            >
              {t("Index.h1")}{" "}
                <span class="text-gradient_indigo-purple font-extrabold">
        {t("Index.h1_append")}
      </span>
            </h1>

            <p class="max-w-2xl text-balance leading-normal text-muted-foreground sm:text-xl sm:leading-8"
            >
              {t("Index.h2")}
            </p>

            <div class="flex space-x-2 md:space-x-4">
                <a target="_blank"
                   href={"https://www.figma.com/community/plugin/1301958586584763919"}
                   class={cn(buttonVariants({size: "lg", rounded: "full"}), "gap-2")}
                >
                    <Icon name="lucide:figma" class="size-4"/>
                    <span>{t("Index.Figma 插件")}</span>
                    <Icon name="lucide:arrow-right" class="size-4"/>
                </a>

                <a href={localizePath("/guides", i18next.language)}
                   rel="noreferrer"
                   class={cn(
                     buttonVariants({
                       variant: "outline",
                       size: "lg",
                       rounded: "full",
                     }),
                     "px-5"
                   )}

                >
                    <Icon name="lucide:book-open-text" class="mr-2 size-4"/>
                    <p>
                        <span class="hidden sm:inline-block">
              {t("Index.使用文档")}
          </span>
                        <!-- <span class="font-semibold">{nFormatter(stars)}</span> -->
                    </p>
                </a>
            </div>
        </div>
        <div class="min-h-[370px]" >
            <ToolsBox client:only="react"></ToolsBox>
        </div>

    </div>
</section>
